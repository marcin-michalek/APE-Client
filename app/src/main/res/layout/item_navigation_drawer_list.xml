<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/states_navigation_drawer_list">

    <ImageView android:layout_width="@dimen/height_avatar_default"
               android:layout_height="@dimen/height_avatar_default"
               android:layout_gravity="center_vertical"
               android:id="@+id/avatar"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/nameTextView"
              android:textStyle="bold"
              android:textSize="@dimen/text_size_users_list"
              android:layout_gravity="center_vertical"/>

</LinearLayout>